---
const webProjects = [
  {
    title: 'La Casa de Hunter',
    category: 'Landing Page',
    image: '/la-casa-de-hunter.webp',
    link: 'https://lacasadehunter.com/',
  },
  {
    title: 'Sistema Ferretería',
    category: 'Sistema a Medida',
    image: '/sistema-ferreteria.webp',
    link: '#',
  },
  {
    title: 'Patagonia Inversiones',
    category: 'Landing Page',
    image: '/patagonia-inversiones.webp',
    link: '#',
  },
  {
    title: 'Current Wildfires',
    category: 'Sitio Web',
    image: '/currentwildfires.webp',
    link: 'https://currentwildfires.com/es/',
  },
]

const appProject = {
  title: 'Taller de Pintura',
  category: 'Aplicación',
  image: '/taller-pintura.webp',
  link: '#',
}
---

<section id="portfolio" class="py-32 relative">
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div data-reveal class="mb-20">
      <p class="text-xs text-gray-500 tracking-widest uppercase mb-4">Portfolio</p>
      <h2 class="text-3xl md:text-5xl font-medium text-white tracking-tight">
        Obras <span class="font-serif italic font-normal">seleccionadas</span>
      </h2>
      <p class="text-gray-400 font-light mt-4 max-w-2xl">
        Algunos de los proyectos en los que trabajamos. Cada uno adaptado a las necesidades del cliente.
      </p>
    </div>

    <!-- Bento: 2x2 web projects left + tall app right -->
    <div data-reveal class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-[1fr_1fr_1fr] auto-rows-[220px] gap-4">
      {/* Row 1 col 1 */}
      {webProjects.slice(0, 2).map((project) => (
        <div class="group relative overflow-hidden rounded-xl bg-black-800">
          {project.image ? (
            <img
              src={project.image}
              alt={`${project.title} - ${project.category} desarrollada por ICA`}
              loading="lazy"
              class="w-full h-full object-cover object-top group-hover:scale-[1.03] transition-transform duration-500"
            />
          ) : (
            <div class="w-full h-full bg-gradient-to-br from-gray-800 to-black-900 flex items-center justify-center">
              <span class="text-gray-600 text-sm font-light">{project.title}</span>
            </div>
          )}
          <div class="absolute inset-0 bg-gradient-to-t from-black-950/90 via-black-950/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-5">
            <span class="text-violet-400 text-xs font-light tracking-wider mb-1">{project.category}</span>
            <h3 class="text-base font-medium text-white">{project.title}</h3>
          </div>
          {project.link !== '#' && (
            <a href={project.link} target="_blank" rel="noopener noreferrer" class="absolute top-3 right-3 w-8 h-8 bg-black-950/60 backdrop-blur-sm rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300 hover:bg-violet-500/80">
              <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white"><path d="M15 3h6v6"/><path d="M10 14 21 3"/><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/></svg>
            </a>
          )}
        </div>
      ))}

      {/* App project — tall, spans 2 rows on lg */}
      <div class="group relative overflow-hidden rounded-xl bg-black-800 md:col-span-2 lg:col-span-1 lg:row-span-2 min-h-[220px]">
        {appProject.image ? (
          <img
            src={appProject.image}
            alt={`${appProject.title} - ${appProject.category} desarrollada por ICA`}
            loading="lazy"
            class="w-full h-full object-cover object-top group-hover:scale-[1.03] transition-transform duration-500"
          />
        ) : (
          <div class="w-full h-full bg-gradient-to-br from-gray-800 to-black-900 flex items-center justify-center">
            <span class="text-gray-600 text-sm font-light">{appProject.title}</span>
          </div>
        )}
        <div class="absolute inset-0 bg-gradient-to-t from-black-950/90 via-black-950/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-5">
          <span class="text-violet-400 text-xs font-light tracking-wider mb-1">{appProject.category}</span>
          <h3 class="text-base font-medium text-white">{appProject.title}</h3>
        </div>
      </div>

      {/* Row 2 col 1-2 */}
      {webProjects.slice(2).map((project) => (
        <div class="group relative overflow-hidden rounded-xl bg-black-800">
          {project.image ? (
            <img
              src={project.image}
              alt={`${project.title} - ${project.category} desarrollada por ICA`}
              loading="lazy"
              class="w-full h-full object-cover object-top group-hover:scale-[1.03] transition-transform duration-500"
            />
          ) : (
            <div class="w-full h-full bg-gradient-to-br from-gray-800 to-black-900 flex items-center justify-center">
              <span class="text-gray-600 text-sm font-light">{project.title}</span>
            </div>
          )}
          <div class="absolute inset-0 bg-gradient-to-t from-black-950/90 via-black-950/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-5">
            <span class="text-violet-400 text-xs font-light tracking-wider mb-1">{project.category}</span>
            <h3 class="text-base font-medium text-white">{project.title}</h3>
          </div>
          {project.link !== '#' && (
            <a href={project.link} target="_blank" rel="noopener noreferrer" class="absolute top-3 right-3 w-8 h-8 bg-black-950/60 backdrop-blur-sm rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300 hover:bg-violet-500/80">
              <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white"><path d="M15 3h6v6"/><path d="M10 14 21 3"/><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/></svg>
            </a>
          )}
        </div>
      ))}
    </div>

    <!-- Ver archivo completo -->
    <div data-reveal class="mt-12 text-center">
      <a
        href="#contacto"
        class="text-xs text-gray-500 tracking-widest uppercase hover:text-violet-400 transition-colors duration-200"
      >
        Ver archivo completo →
      </a>
    </div>
  </div>
</section>
